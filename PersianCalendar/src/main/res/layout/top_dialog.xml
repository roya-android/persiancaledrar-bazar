<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btn_dialog_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txt_dialog_1"
        android:background="#00ff1111"
        android:padding="0dp"
        android:textStyle="bold"
        android:textColor="#000551"
        android:text="بازگشت"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/txt_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:textColor="#000551"
        android:text="TextView"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txt_dialog_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_dialog"
        android:text="TextView"
        android:textColor="#000551"
        android:padding="5dp"
        android:textSize="14dp" />
</RelativeLayout>
