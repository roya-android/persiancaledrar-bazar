<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    tools:context="com.calen.dar2.view.activity.Dialog"
    android:paddingBottom="24dp"
    android:paddingTop="24dp"
    android:paddingRight="24dp"
    android:paddingLeft="24dp"
    android:background="@android:color/transparent"
    android:gravity="center">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout"
        android:gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eee"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/border_buttom_gray"
                android:gravity="right"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/tv_dialog_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/border_buttom_gray"
                    android:text="پیشنهاد فوق العاده"
                    android:textColor="#000000"
                    android:layout_marginRight="4dp"/>

                <Button
                    android:id="@+id/btn_dialog_close"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="#b9122e"
                    android:text="X"
                    android:textColor="#fff"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">

                        <ImageView
                            android:id="@+id/im_dialog_logo"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:scaleType="fitXY"
                            android:layout_marginLeft="8dp"/>

                        <TextView
                            android:id="@+id/tv_dialog_title"
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            android:layout_alignLeft="@+id/im_dialog_logo"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:ems="10"
                            android:text=" تیتر نوتیفیکیشن  تیتر نوتیفیکیشن"
                            android:textColor="#000"
                            android:padding="8dp"
                            android:gravity="center|right"
                            android:textSize="18dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:id="@+id/tv_dialog_description"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:background="#00000000"
                            android:lineSpacingExtra="10dp"
                            android:tag="description"
                            android:text="توضیحات توضیحات توضیحات توضیحات توضیحات توضیحات توضیحات توضیحات توضیحات "
                            android:textColor="#000000"
                            android:padding="4dp"
                            android:layout_gravity="right"
                            android:gravity="right"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp">

                        <Button
                            android:id="@+id/btn_dialog_download"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:background="@drawable/border_buttom_green"
                            android:text="دانلود کنید"
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginBottom="8dp"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
