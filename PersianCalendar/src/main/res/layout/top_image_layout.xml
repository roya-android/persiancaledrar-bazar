<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center"
    android:id="@+id/p"
    android:background="?attr/colorPrimary"
    android:layout_height="wrap_content">

    <AnalogClock
        android:id="@+id/clock"
        android:layout_width="62dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        />

    <RelativeLayout
        android:id="@+id/rtlp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_toRightOf="@id/clock"
        android:paddingRight="5dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/header23">

        <!--<Button-->
        <!--android:id="@+id/btn_image_top"-->
        <!--android:layout_width="110dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:background="@drawable/ic_brightness_5"-->
        <!--android:textSize="10dp"-->
        <!--android:text="Button" />-->

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtarab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/txtroz"
            android:background="#00ff1234"
            android:layout_marginRight="20dp"
            android:text="TextView"
            android:layout_marginTop="9dp"
            android:textColor="#ffffff"
            android:textSize="14dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtmars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtarab"
            android:layout_alignRight="@id/txtarab"
            android:background="#00ff1234"
            android:text="TextView"
            android:textColor="#ffffff"
            android:textSize="14dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtIran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ff1234"
            android:layout_below="@id/txtroz"
            android:padding="0dp"
            android:text="30"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtfarvardin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#00ff1234"
            android:text="TextView"
            android:layout_marginRight="20dp"
            android:layout_below="@id/txtroz"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:visibility="invisible"
            android:textStyle="bold" />
<!--روز هفته-->
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtroz"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#00ff1234"
            android:text="روز هفته"
            android:textColor="#ffffff"
            android:textSize="17sp"
             />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtsal"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/txtroz"
            android:layout_marginEnd="90dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@id/txtfarvardin"
            android:background="#00ff1234"
            android:text="1397"
            android:textColor="#ffffff"
            android:textSize="13sp" />

    </RelativeLayout>

</RelativeLayout>
